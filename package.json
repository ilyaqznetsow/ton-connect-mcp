{
  "name": "ton-connect-mcp",
  "version": "1.1.0",
  "description": "Zero-setup MCP server for TON Connect wallet integration. Works instantly with Cursor, Claude, and other AI assistants.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ton-connect-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "tonconnect-manifest.example.json"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "test:install": "npm pack && echo 'Package created. Test with: npm install -g ./ton-connect-mcp-1.0.0.tgz'"
  },
  "keywords": [
    "mcp",
    "ton",
    "tonconnect",
    "wallet",
    "blockchain",
    "model-context-protocol",
    "cursor",
    "claude",
    "ai",
    "crypto",
    "web3"
  ],
  "author": "ilyaqznetsow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ilyaqznetsow/ton-connect-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ilyaqznetsow/ton-connect-mcp/issues"
  },
  "homepage": "https://github.com/ilyaqznetsow/ton-connect-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@tonconnect/sdk": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
